
<%= form_with url: users_path, scope: :user, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>
  
  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>

  <p>
    <%= form.radio_button :male, "male" %>
    <%= form.label :gender_male, "Male" %>
    <%= form.radio_button :female, "female" %>
    <%= form.label :gender_female, "Female" %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </p>
  
  <p>
    <%= form.label :password_confirmation %><br>
    <%= form.text_field :password_confirmation %>
  </p>

  <p>
    <%= form.submit :SIGNUP %><br>
  </p>
  
<% end %>