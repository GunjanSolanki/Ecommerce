<h1>Shopping Cart</h1>

<table>
  <tr>
    <th>Product Desciption</th>
    <th>Product Price</th>
    <th>Product Quantity</th>
    <th>Product Category</th>
  </tr>
  <% if current_cart %>
    <% @current_cart.products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= Category.find(product.category_id).name %></td>
        <td><%= link_to 'Remove from Cart', remove_from_cart_path(product.id), method: :delete %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= link_to 'Back', products_path %>